    <script>
        function searchGames() {
            const query = document.getElementById('searchInput').value;
            const resultsContainer = document.getElementById('searchResults');
            resultsContainer.innerHTML = ''; // Clear previous results

            // Dummy data for demonstration
            const dummyResults = [
                {
                    title: 'Game 1',
                    description: 'Description of Game 1',
                    image: '/img/game1.jpg',
                    link: '/product/game1.html'
                },
                {
                    title: 'Game 2',
                    description: 'Description of Game 2',
                    image: '/img/game2.jpg',
                    link: '/product/game2.html'
                },
                {
                    title: 'Game 3',
                    description: 'Description of Game 3',
                    image: '/img/game3.jpg',
                    link: '/product/game3.html'
                }
            ];

            // Filter dummy results based on query (simple case-insensitive search)
            const filteredResults = dummyResults.filter(result =>
                result.title.toLowerCase().includes(query.toLowerCase()) ||
                result.description.toLowerCase().includes(query.toLowerCase())
            );

            // Render results
            filteredResults.forEach(result => {
                const resultElement = document.createElement('div');
                resultElement.className = 'search-result';
                resultElement.innerHTML = `
                    <img src="${result.image}" alt="${result.title}">
                    <div>
                        <h2>${result.title}</h2>
                        <p>${result.description}</p>
                        <a href="${result.link}">View Product</a>
                    </div>
                `;
                resultsContainer.appendChild(resultElement);
            });

            if (filteredResults.length === 0) {
                resultsContainer.innerHTML = '<p>No results found</p>';
            }
        }
    </script>
